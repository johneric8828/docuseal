<div class="form-control">
  <% can_send_sms = Sms.configured?(current_account) %>
  <% if can_send_sms %>
    <%= f.label :send_sms, for: uuid = SecureRandom.uuid, class: 'flex items-center cursor-pointer' do %>
      <%= f.check_box :send_sms, id: uuid, class: 'base-checkbox', checked: !local_assigns.key?(:resend_sms) %>
      <span class="label"><%= local_assigns[:resend_sms] ? t('re_send_sms') : t('send_sms') %></span>
    <% end %>
  <% else %>
    <div class="alert alert-info">
      <div class="flex items-center space-x-2">
        <%= svg_icon('info_circle', class: 'w-5 h-5') %>
        <span><%= t('sms_is_not_configured') %>. <%= link_to t('configure_sms'), settings_sms_path, class: 'link' %></span>
      </div>
    </div>
  <% end %>
</div>
